{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "strict": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "paths": { "~/*": ["./src/*"] },
    "types": ["@emotion/react/types/css-prop", "jest", "@testing-library/jest-dom"]
  },
  "include": ["next-env.d.ts", "src/**/*", "src/tests/**/*"],
  "exclude": ["node_modules"]
}
